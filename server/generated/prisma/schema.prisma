generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_LOCAL")
}

model Club {
  id            Int              @id @default(autoincrement())
  name          String
  country       String
  emblem        String
  stadium       String
  idCompetition Int              @unique
  competition   Competition      @relation(fields: [idCompetition], references: [id])
  players       Player[]
  trainers      Trainer[]
  favorites     UsersFavorites[]
}

model Player {
  id          Int      @id @default(autoincrement())
  name        String
  position    String
  dateOfBirth DateTime
  nationality String
  idClub      Int
  club        Club     @relation(fields: [idClub], references: [id])
}

model Trainer {
  id            Int      @id @default(autoincrement())
  name          String
  dateOfBirth   DateTime
  nationality   String
  contractStart DateTime
  contractEnd   DateTime
  idClub        Int
  club          Club     @relation(fields: [idClub], references: [id])
}

model Competition {
  id        Int      @id @default(autoincrement())
  name      String
  place     String
  emblem    String
  startDate DateTime
  endDate   DateTime
  clubs     Club[]
}

model User {
  id        Int              @id @default(autoincrement())
  username  String
  mail      String           @unique
  password  String
  favorites UsersFavorites[]
}

model UsersFavorites {
  id     Int  @id @default(autoincrement())
  userId Int
  clubId Int
  user   User @relation(fields: [userId], references: [id])
  club   Club @relation(fields: [clubId], references: [id])
}
